<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />
    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="CountdownLabel">
        <item name="android:textColor">@android:color/secondary_text_dark</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="CountdownNumber">
        <item name="android:textColor">@android:color/primary_text_dark</item>
        <item name="android:textSize">24sp</item>
    </style>

    <style name="CountdownContainer">
        <item name="android:paddingBottom">32dp</item>
        <item name="android:paddingTop">8dp</item>
        <item name="android:orientation">vertical</item>
        <item name="android:gravity">center</item>
        <item name="android:alpha">0</item>
    </style>

    <style name="SignupTextField">
        <item name="android:textSize">14sp</item>
    </style>

</resources>
