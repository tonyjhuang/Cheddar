<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:ignore="MissingPrefix">


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/alpha_warning_header"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="24dp"
        android:orientation="horizontal">

        <TextView
            fontPath="GothamRounded-Bold.ttf"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/app_name_lowercase"
            android:textColor="@color/onboard_text_color"
            android:textSize="44sp"
            tools:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="@string/alpha_header"
            android:textColor="@color/onboard_text_color"
            android:textSize="44sp" />
    </LinearLayout>

    <TextView
        android:id="@+id/alpha_warning_header"
        fontPath="Effra-Medium.ttf"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/alpha_warning"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="8dp"
        android:text="@string/alpha_warning_header"
        android:textColor="@color/onboard_text_color"
        android:textSize="24sp" />

    <TextView
        android:id="@+id/alpha_warning"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/center_anchor"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="-48dp"
        android:layout_marginLeft="56dp"
        android:layout_marginRight="56dp"
        android:text="@string/alpha_warning"
        android:textColor="@color/onboard_text_color"
        android:textSize="20sp" />

    <View
        android:id="@+id/center_anchor"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_centerInParent="true"
        android:background="@android:color/black" />

    <Button
        android:id="@+id/confirm"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="64dp"
        android:layout_marginLeft="48dp"
        android:layout_marginRight="48dp"
        android:height="56dp"
        android:text="@string/alpha_confirm" />


</RelativeLayout>